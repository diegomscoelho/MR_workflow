process {   
 withLabel: ERRO {
        errorStrategy =  { task.exitStatus == 1 ? 'ignore' : 'retry' }
		memory = 80.GB
        publishDir = [
            path: { "${params.outdir}/results" },
            mode: 'copy'
        ]
    }
   
 withLabel: COLOC {
        errorStrategy =  { task.exitStatus == 1 ? 'ignore' : 'retry' }
		memory = { 8.GB + (16.GB * (task.attempt - 1)) }
        publishDir = [
            path: { "${params.outdir}/results" },
            mode: 'copy'
        ]
    }

 withLabel: GSMR {
        errorStrategy =  { task.exitStatus == 1 ? 'ignore' : 'retry' }
                memory = { 16.GB + (16.GB * (task.attempt - 1)) }
        publishDir = [
            path: { "${params.outdir}/results" },
            mode: 'copy'
        ]
    }

}
